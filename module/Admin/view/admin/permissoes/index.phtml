<script type="text/javascript">
    $(document).ready(function() {
        $('.data-table').DataTable();
    } );
    $(".btn-danger").click(function(e){

        var itemSelecionado = $(e.currentTarget).data('id');
        bootbox.confirm("Você tem certeza que deseja excluir essa permissão?", function(result) {
            if (result)
            {
                ids = [itemSelecionado];
                deleteById('permissoes', ids);
            }
        });
    });

    $(".btn-warning").click(function(e) {
        var itemSelecionado = $(e.currentTarget).data('id');
        ids = [itemSelecionado];
        updateById('permissoes', ids);
    });

</script>
